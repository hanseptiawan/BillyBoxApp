<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingEnd="10dp"
    android:id="@+id/list_productcat">

    <android.support.v7.widget.CardView
        android:id="@+id/product_area"
        android:layout_width="190dp"
        android:orientation="vertical"
        android:layout_height="190dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackground"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_noimg"/>

            <FrameLayout
                android:id="@+id/fl1"
                android:layout_width="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/tv_rounded">
                <TextView
                    android:id="@+id/product_stock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="120"
                    android:textColor="@color/menu_text"
                    android:gravity="end"
                    android:textSize="12sp"/>
            </FrameLayout>
            <FrameLayout
                android:id="@+id/fl2"
                android:layout_below="@+id/fl1"
                android:layout_marginTop="2dp"
                android:paddingStart="10dp"
                android:paddingEnd="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:background="@drawable/tv_rounded2">
                <TextView
                    android:id="@+id/harga_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp 5000,-"
                    android:textColor="@color/menu_text"
                    android:gravity="end"
                    android:textSize="12sp"/>
            </FrameLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/card_area"
            android:background="@color/greytextdarker"
            android:alpha="0.5"
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:layout_height="70dp">

            <TextView
                android:id="@+id/product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="5dp"
                android:gravity="start|top"
                tools:text="Product Name"
                android:textSize="14sp"
                android:maxLines="2"
                android:lines="2"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/menu_text" />
            <TextView
                android:id="@+id/uk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_below="@+id/product_title"
                tools:text="Ukuran"
                android:textStyle="italic"
                android:textSize="14sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/menu_text" />

            <TextView
                android:id="@+id/ukuran_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/uk"
                android:layout_below="@+id/product_title"
                tools:text="12 x 40 cm"
                android:textSize="14sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/menu_text" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>