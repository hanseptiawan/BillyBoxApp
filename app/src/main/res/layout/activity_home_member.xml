<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout_home_member"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_home_member"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end">

                <TextView
                    android:id="@+id/toolbar_tittle_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/app_name"
                    android:textSize="24sp"
                    android:textColor="@color/menu_text"
                    android:textStyle="bold"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/home_button_member"
                    android:layout_toStartOf="@id/cart_button_member"
                    android:layout_marginRight="12dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/ic_home"/>

                <ImageView
                    android:id="@+id/cart_button_member"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_cart" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <FrameLayout
        android:id="@+id/fragment_container_member"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    </LinearLayout>

    <!--<include-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_width="match_parent"-->
        <!--layout="@layout/app_bar_home"/>-->

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation_view_home_member"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#30E6A3"
        app:headerLayout="@layout/nav_header"
        app:itemTextColor="@color/menu_text"
        app:menu="@menu/menu_member">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_hi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="190dp"
                android:layout_marginStart="30dp"
                android:text="hi "
                android:textColor="@color/menu_text"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/tv_userdisplay2_member"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv_hi"
                android:layout_marginTop="190dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/menu_text"
                android:textStyle="italic"
                android:textSize="20sp"
                />

        </RelativeLayout>

        <Button
            android:id="@+id/btn_signout"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="@string/signout"
            android:layout_gravity="bottom"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/menu_text"
            android:background="@color/colorAccent"/>

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>