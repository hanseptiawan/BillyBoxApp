<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyback">

    <RelativeLayout
        android:id="@+id/frame_content"
        android:layout_width="340dp"
        android:layout_height="510dp"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/frame_rounded"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:background="@color/greyback"/>

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_product"
            android:layout_marginTop="20dp"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            android:text="Nama product"
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <TableLayout
            android:id="@+id/tb_informasiproduct"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_nama"
            android:layout_marginTop="8dp">

            <TableRow
                android:layout_width="80dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_cartonid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Carton ID"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/tv_cartonid2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle=""
                    android:text="CAR-1111"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="60dp"/>
            </TableRow>

            <TableRow
                android:layout_width="80dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kategori"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/tv_category2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CAC-003"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="60dp"/>
            </TableRow>
            <TableRow
                android:layout_width="80dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_stock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Stock"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/tv_stock2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="356"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="60dp"/>
            </TableRow>

            <TableRow
                android:layout_width="80dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_harga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Harga"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/tv_harga2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50000"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="60dp"/>
            </TableRow>

            <TableRow
                android:layout_width="80dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_ukuran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ukuran"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/tv_ukuran2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12 x 12 cm"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="60dp"/>
            </TableRow>

            <TableRow
                android:layout_width="80dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_grametur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grametur"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/tv_grametur2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15364456"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="60dp"/>
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/btn_addkeranjang"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_below="@+id/tb_informasiproduct"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true"
            android:text="Tambah ke"
            android:drawableEnd="@drawable/ic_cart"
            android:paddingEnd="12dp"
            android:gravity="center"
            android:background="@drawable/btn_rounded"
            android:textColor="@color/menu_text"
            android:textAllCaps="false"/>

    </RelativeLayout>

</RelativeLayout>