<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyback">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:id="@+id/frame_content"
        android:layout_width="340dp"
        android:layout_height="580dp"
        android:background="@drawable/frame_rounded"
        android:elevation="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_height="160dp"
            android:layout_width="160dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/circular_profile"
            android:src="@drawable/ic_noimg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            app:civ_border_width="4dp"
            app:civ_border_color="@color/menu_text"
            android:elevation="4dp">

        </de.hdodenhof.circleimageview.CircleImageView>

        <ImageView
            android:id="@+id/iv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_editprofile"
            android:clickable="true"
            android:layout_toEndOf="@+id/circular_profile"
            android:layout_marginTop="15dp"
            android:layout_marginStart="50dp"/>

        <TextView
            android:id="@+id/tv_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/circular_profile"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:text="Nama Customer"
            android:textSize="24sp"
            android:textStyle="bold"
            />

        <TableLayout
            android:id="@+id/tb_informasiuser"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:stretchColumns="1"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_nama"
            android:layout_marginTop="8dp">

            <TableRow
                android:layout_width="80dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_ttl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TTL"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/tv_tt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle=""
                    android:text="dd/mm/yyyy"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="60dp"/>
            </TableRow>

            <TableRow
                android:layout_width="80dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_nohp1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No. Hp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/tv_nohp2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+6285xxxxxxxxxxx"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="60dp"/>
            </TableRow>
            <TableRow
                android:layout_width="80dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_alamat1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/tv_alamat2"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Jl. Raya Baru No. 32kkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkkk"
                    android:scrollHorizontally="false"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="60dp"/>
            </TableRow>

            <!--<view android:layout_height="1dip"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:background="@color/greyback"/>-->

            <TableRow
                android:layout_width="80dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_username1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/tv_username2"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Username"
                    android:scrollHorizontally="false"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="60dp"/>
            </TableRow>

            <TableRow
                android:layout_width="80dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_password1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="16dp"/>

                <TextView
                    android:id="@+id/tv_password2"
                    android:layout_width="fill_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="************"
                    android:scrollHorizontally="false"
                    android:textSize="14sp"
                    android:textStyle="italic"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="60dp"/>
            </TableRow>

        </TableLayout>

    </RelativeLayout>

</RelativeLayout>