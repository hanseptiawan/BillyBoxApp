<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/list_pesanan">

    <android.support.v7.widget.CardView
        android:id="@+id/card_areapesanan"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="80dp"
        android:gravity="center"
        android:foreground="?attr/selectableItemBackground"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:gravity="start|top"
                android:text="ID Pesanan"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_grey_strong" />

            <TextView
                android:id="@+id/tv_idpesanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/tv0"
                android:layout_alignBaseline="@id/tv0"
                android:text="458697082975426"
                android:textSize="14sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_idpesanan"
                android:layout_marginTop="5dp"
                android:layout_marginStart="8dp"
                android:text="Tgl Pengiriman"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_tglantar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv1"
                android:layout_alignBaseline="@id/tv1"
                android:layout_marginTop="5dp"
                android:layout_marginStart="8dp"
                android:text="dd/mm/yyyy"
                android:textStyle="bold"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_tglantar"
                android:layout_marginTop="2dp"
                android:layout_marginStart="8dp"
                android:text="Tanggal terima"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv_tglterima"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tv2"
                android:layout_alignBaseline="@id/tv2"
                android:layout_marginTop="2dp"
                android:layout_marginStart="8dp"
                android:text="dd/mm/yyyy"
                android:textStyle="bold"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/tv4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_toStartOf="@id/tv_status"
                android:layout_alignBaseline="@id/tv_status"
                android:textSize="12sp"
                android:gravity="end"
                android:text="Status" />

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:textStyle="bold"
                android:layout_alignBaseline="@+id/tv_tglterima"
                android:layout_alignBottom="@+id/tv_tglterima"
                android:layout_alignParentEnd="true"
                android:gravity="end"
                android:textSize="12sp"
                android:text="status" />

            <TextView
                android:id="@+id/tv5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/tv_shipmet"
                android:layout_marginEnd="8dp"
                android:layout_below="@+id/tv_idpesanan"
                android:textSize="12sp"
                android:text="Lokasi" />

            <TextView
                android:id="@+id/tv_shipmet"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/tv_status"
                android:layout_below="@+id/tv_idpesanan"
                android:textSize="12sp"
                android:text="Surabaya" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>