<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.box.billy.billybox.Main.SignIn">

    <ImageView
        android:id="@+id/img_close_signin"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:scaleType="fitXY"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:src="@drawable/ic_close"/>

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="320dp"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:layout_below="@+id/img_close_signin"
        android:layout_marginTop="70dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_billybox2"/>

    <EditText
        android:id="@+id/et_username"
        android:layout_width="215dp"
        android:layout_height="32dp"
        android:layout_below="@+id/img_logo"
        android:layout_marginTop="50dp"
        android:textColorHint="@color/colorPrimary"
        android:hint="Username"
        android:inputType="text"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:ems="10"
        android:focusable="true"
        android:textSize="15sp"
        android:background="@drawable/et_cornerradius"
        android:textColor="#70707070"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/et_password"
        android:layout_width="215dp"
        android:layout_height="32dp"
        android:layout_below="@+id/et_username"
        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:textColorHint="@color/colorPrimary"
        android:hint="Kata Sandi"
        android:inputType="textPassword"
        android:ems="10"
        android:focusable="true"
        android:textSize="15sp"
        android:background="@drawable/et_cornerradius"
        android:textColor="#70707070"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_masuk"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:background="@drawable/btn_rounded"
        android:textColor="@color/menu_text"
        android:text="Masuk"
        android:textAllCaps="false"
        android:layout_marginTop="35dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_password"/>

    <TextView
        android:id="@+id/tv_signup"
        android:layout_below="@+id/btn_masuk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/signup_intro"
        android:textColor="@color/menu_text"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textStyle="italic"
        />

</RelativeLayout>
